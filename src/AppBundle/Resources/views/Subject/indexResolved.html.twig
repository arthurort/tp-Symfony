{% extends 'base.html.twig' %}

{% block title 'Sujets' %}

{% block body %}
    {% for subject in subjects %}
        <article class="card card-block {% if subject.vote < 0 %}unpopular{% endif %}">
            <h3 class="card-title">{{ subject.title }}</h3>
            <section class="card-text">{{ subject.description }}</section>
            <span class="card-text">
                <small class="text-muted">
                    {{ subject.updatedAt|localizeddate }}
                </small>
            </span>
            <a href="{{ path('subject_id', {id:subject.id}) }}">Plus...</a>
            <p>Score : {{ subject.vote }}</p>
        </article>
    {% endfor %}
    <style>
        .unpopular{background-color:#d3d3d3;}
    </style>
{% endblock %}